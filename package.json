{
  "name": "paw-wars",
  "version": "0.3.0",
  "description": "A modern take on Drugwars (Dopewars), but with cats.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:server watch:css",
    "production": "node index.js",
    "compile": "sass assets/css/custom.scss:assets/css/custom.css",
    "dev:server": "nodemon --ignore assets --ext js,hbs index.js",
    "watch:css": "sass --watch assets/css/custom.scss:assets/css/custom.css",
    "test": "mocha ./tests/ && eslint .",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snollygolly/paw-wars.git"
  },
  "keywords": [
    "paw-wars",
    "drugwars",
    "dopewars"
  ],
  "author": "snollygolly (@snollygolly)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/snollygolly/paw-wars/issues"
  },
  "homepage": "https://github.com/snollygolly/paw-wars#readme",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-hbs": "^1.0.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^6.0.0",
    "koa-redis": "^4.0.1",
    "koa-generic-session": "^2.3.1",
    "koa-static": "^4.0.1",
    "marked": "^15.0.12",
    "mongodb": "^3.2.7",
    "passport-auth0": "^1.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^9.35.0",
    "mocha": "^11.7.2",
    "mocha-junit-reporter": "^1.17.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "sass": "^1.77.0"
  }
}
